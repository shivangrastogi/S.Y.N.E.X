# Normalize line endings and mark common binary types
* text=auto

# Prefer LF for source files
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.js text eol=lf

# Windows scripts keep CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.wav binary
*.mp3 binary
*.exe binary
*.dll binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
